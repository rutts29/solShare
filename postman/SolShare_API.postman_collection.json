    {
      "name": "Authentication",
      "item": [
        {
          "name": "1. Get Challenge",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.success && jsonData.data) {",
                  "    pm.collectionVariables.set('challengeMessage', jsonData.data.message);",
                  "    pm.collectionVariables.set('challengeNonce', jsonData.data.nonce);",
                  "}",
                  "",
                  "pm.test('Challenge received', function () {",
                  "    pm.expect(jsonData.success).to.be.true;",
                  "    pm.expect(jsonData.data.message).to.exist;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"wallet\": \"{{testWallet}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/challenge",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "challenge"]
            }
          }
        },
        {
          "name": "2. Verify Signature",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.success && jsonData.data && jsonData.data.token) {",
                  "    pm.collectionVariables.set('authToken', jsonData.data.token);",
                  "}",
                  "",
                  "pm.test('Token received', function () {",
                  "    pm.expect(jsonData.success).to.be.true;",
                  "    pm.expect(jsonData.data.token).to.exist;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"wallet\": \"{{testWallet}}\",\n  \"signature\": \"YOUR_SIGNATURE_HERE\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/verify",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "verify"]
            },
            "description": "Sign the challenge message with your wallet and paste the signature here"
          }
        },
        {
          "name": "3. Refresh Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.success && jsonData.data && jsonData.data.token) {",
                  "    pm.collectionVariables.set('authToken', jsonData.data.token);",
                  "}",
                  "",
                  "pm.test('Token refreshed', function () {",
                  "    pm.expect(jsonData.success).to.be.true;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "refresh"]
            }
          }
        }
      ]
    },
