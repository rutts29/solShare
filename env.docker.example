# ============================================
# SOLSHARE DOCKER ENVIRONMENT
# ============================================
# Copy this file to .env and fill in your values
# Run: docker-compose up
# ============================================

# --------------------------------------------
# SUPABASE
# --------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# --------------------------------------------
# UPSTASH REDIS
# --------------------------------------------
# Use the native Redis URL (rediss://) not the REST URL
UPSTASH_REDIS_URL=rediss://default:token@your-redis.upstash.io:6379
UPSTASH_REDIS_TOKEN=your-token

# --------------------------------------------
# CLOUDFLARE R2
# --------------------------------------------
R2_ACCOUNT_ID=your-account-id
R2_ACCESS_KEY_ID=your-access-key
R2_SECRET_ACCESS_KEY=your-secret-key
R2_BUCKET_NAME=solshare
R2_PUBLIC_URL=https://pub-xxx.r2.dev

# --------------------------------------------
# SOLANA
# --------------------------------------------
SOLANA_RPC_URL=https://devnet.helius-rpc.com/?api-key=your-key
